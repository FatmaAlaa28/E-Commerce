@model Online_Store.Models.Product

@{
    ViewData["Title"] = "Details";
}
 
<link rel="stylesheet" href="~/css/descripe_styles.css" />
<section class="product">
    <div class="product__photo">
        <div class="photo-container">
            <div class="photo-main">
                <div class="controls">
                    <i class="material-icons">share</i>
                    <i class="material-icons">favorite_border</i>
                </div>
                <img src="~/Image/@Model.Image" alt="">
            </div>
        </div>
    </div>
    <div class="product__info">
        <div class="title">
            <h1> @Html.DisplayFor(model => model.ProductName)</h1>
            <span>@Html.DisplayFor(model => model.Category)</span>
        </div>
        <div class="price">
            EGP <span> @Html.DisplayFor(model => model.Price)</span>
        </div>
        <div class="description">
            <h3>Description</h3>
                @Html.DisplayFor(model => model.Description)
        </div>
        <button class="buy--btn">ADD TO CART</button>
    </div>
</section>
